FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

height var_height;

defaultFieldValues
(
    volScalarFieldValue alpha.water 0
    volScalarFieldValue T 350
);

regions
(
    boxToCell
    {
        box (0 0 -1) (0.1461 $height 1);
        fieldValues
        (
            volScalarFieldValue alpha.water 1
            volScalarFieldValue T 273
        );
    }
);


